<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">

	<select id = "findAll" resultType = "mybatis.vo.MemberVO">
		select * from member_t
	</select>
	
	<!-- 회원가입 -->
	<insert id="add" parameterType="java.util.Map">
  		INSERT INTO laptopmember(member_name, member_age, member_gender, f_key,	email, profile_image)
  		VALUES(#{name}, #{age}, #{gender}, #{f_key}, #{email}, #{p_image})
  	</insert>
  	
  	<!-- f_Key 저장 -->
  	<insert id="add_f_Key" parameterType="java.util.Map">
  		INSERT INTO favorite(f_Key, laptop_Name)
  		VALUES(#{f_Key}, #{laptop_Name})
  	</insert>
  	
  	<!-- signInChk -->
  	<select id="signInChk" parameterType="java.util.Map" resultType="mybatis.vo.MemberVO">
  		SELECT * FROM laptopmember WHERE email = #{email} AND password = #{password}
  	</select>
</mapper>